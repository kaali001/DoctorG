<script>
 function setActiveButton(buttonId) {
    // Remove "active" class from all buttons
    var buttons = document.querySelectorAll(".nav-item.nav-link");
    buttons.forEach(function (button) {
        button.classList.remove("active");
    });

    // Add "active" class to the clicked button
    var activeButton = document.getElementById(buttonId);
    activeButton.classList.add("active");
}

document.getElementById("today-session").addEventListener("click", function () {
    setActiveButton("today-session");
    
    // display the corresponding content for Today's Session
  
    document.getElementById("content-today-session").style.display = "block";
    document.getElementById("content-upcoming-session").style.display = "none";
    document.getElementById("content-all-patients").style.display = "none";
    document.getElementById("content-alerts").style.display = "none";
});

document.getElementById("upcoming-session").addEventListener("click", function () {
    setActiveButton("upcoming-session");
    
   
    document.getElementById("content-today-session").style.display = "none";
    document.getElementById("content-upcoming-session").style.display = "block";
    document.getElementById("content-all-patients").style.display = "none";
    document.getElementById("content-alerts").style.display = "none";
});

document.getElementById("all-patients").addEventListener("click", function () {
    setActiveButton("all-patients");
    
    
    document.getElementById("content-today-session").style.display = "none";
    document.getElementById("content-upcoming-session").style.display = "none";
    document.getElementById("content-all-patients").style.display = "block";
    document.getElementById("content-alerts").style.display = "none";
});

document.getElementById("alerts").addEventListener("click", function () {
    setActiveButton("alerts");
   
    document.getElementById("content-today-session").style.display = "none";
    document.getElementById("content-upcoming-session").style.display = "none";
    document.getElementById("content-all-patients").style.display = "none";
    document.getElementById("content-alerts").style.display = "block";
});



   document.getElementById('toggleLink1').addEventListener('click', function (event) {
            event.preventDefault();
            var div1 = document.getElementById('div1');
             var div2 = document.getElementById('div2');
            if (div1.style.display === 'none') {
                div1.style.display = 'block';
                div2.style.display = 'none';
            } else {
                div2.style.display = 'none';
            }
        });

        
    document.getElementById('toggleLink2').addEventListener('click', function (event) {
            event.preventDefault();
            var div2 = document.getElementById('div2');
            var div1 = document.getElementById('div1');
            if (div2.style.display === 'none') {
                div2.style.display = 'block';
                div1.style.display = 'none';
            } else {
                div1.style.display = 'none';
                 div2.style.display = 'block';
            }
        });


</script>
    


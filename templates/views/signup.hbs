    <div id="page_content">
        <h2>Create an Account</h2>
        <img class="img-fluid image_left animated pulse infinite" style="animation-duration: 3s;" src="images\User flow-amico.png" alt="image">
    </div>
    
    <div class="d-flex justify-content-center align-items-center mt-5">
       
        <div class="selecter">
            <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
                <li class="nav-item text-center" >
                  <a class="nav-link active btl" id="pills-home-tab" data-toggle="pill" href="#student_form" role="tab" aria-controls="student_form" aria-selected="true" name="user_type" value="student" >As a Patient</a>
                </li>
                <li class="nav-item text-center">
                  <a class="nav-link btr" id="pills-profile-tab" data-toggle="pill" href="#college_form" role="tab" aria-controls="college_form" aria-selected="false" name="user_type" value="admin" >As a Doctor</a>
                </li> 
           </ul>
       </div>

        <div class="login-box ">

           
            <div class="tab-content" id="pills-tabContent">
              
                  <!-- Patient registration form  -->
                 
                <div class="tab-pane fade show active" id="student_form" role="tabpanel" aria-labelledby="pills-home-tab">
                 
                 
                  <h2 class=" text-center mb-5" >Signup</h2>

                  <form action="/signup" method="post" >

                    <input type="hidden"  name="hidden_value" value="stud"/>

                    <div class="form-outline form-group mb-4">
                        <i class="fa fa-user"></i>
                      <input type="text" id="form3Example1cg" class="form-control form-control-lg" placeholder="User Name" name="Name"/>

                    </div>
    
                    <div class="form-outline form-group mb-4">
                        <i class="fa fa-user"></i>
                      <input type="email" id="form3Example3cg" class="form-control form-control-lg" placeholder="Email" name="email"/>
                     
                    </div>
    
                    <div class="form-outline form-group mb-4">
                        <i class="fa fa-unlock-alt"></i>
                      <input type="password" id="form3Example4cg" class="form-control form-control-lg" placeholder="Password" name="password" />
                    </div>
    
                    <div class="form-outline form-group mb-4">
                        <i class="fa fa-unlock-alt"></i>
                      <input type="password" id="form3Example4cdg" class="form-control form-control-lg" placeholder="Confirm password" name="cpassword"/>
                    </div>
    
                  
    
                    <div class="button_group" id="login_button" class="d-grid gap-2 col-6 mx-auto">
                      
                      <input type="submit" class="btn btn-lg btn-primar btn-block" value="Register">
                    </div> 

                    <div class="fotter text-center text-muted ">

                        <p class="mt-5 mb-0">Have already an account? <a href="login"
                            class="fw-bold text-body"><u>Login here</u></a>
                        </p>

                    </div>
    
                    
    
                  </form>
    
                </div>


               <!-- Doctor Registration form  -->

                <div class="tab-pane fade " id="college_form" role="tabpanel" aria-labelledby="pills-profile-tab">
  
                   
                    <h2 class=" text-center mb-5" id="signuptex">Signup</h2>
  
                    <form action="/signup" method="post" >



                       <input type="hidden"  name="hidden_value" value="admin"/>
      
                      <div class="form-outline form-group mb-4">
                         <i class="fa fa-user"></i>
                         <input type="text" id="form3Example1cg" class="form-control form-control-lg" placeholder="User Name" name="Name"/>
                      </div>
      
                      <div class="form-outline form-group mb-4">
                          <i class="fa fa-user"></i>
                          <input type="email" id="form3Example3cg" class="form-control form-control-lg" placeholder="Email" name="email"/> 
                      </div>

                      <div class="form-outline form-group mb-4">
                         <i class="fa fa-home"></i>
                         <input type="text" id="form3Example3cg" class="form-control form-control-lg" placeholder="Phone no." name="unique_id"/> 
                      </div>
      
                      <div class="form-outline form-group mb-4">
                          <i class="fa fa-unlock-alt"></i>
                          <input type="password" id="form3Example4cg" class="form-control form-control-lg" placeholder="Password" name="password" />
                      </div>
      
                      <div class="form-outline form-group mb-4">
                          <i class="fa fa-unlock-alt"></i>
                          <input type="password" id="form3Example4cdg" class="form-control form-control-lg" placeholder="Confirm password" name="cpassword"/>
                      </div>
      
                    
      
                      <div class="button_group" id="signup_button" class="d-grid gap-2 col-6 mx-auto">
                         <input type="submit" class="btn btn-lg btn-primar btn-block" value="Register">
                      </div> 
  
                      <div class="fotter text-center text-muted ">
                          <p class="mt-5 mb-0">
                             Have already an account? <a href="login"class="fw-bold text-body"><u>Login here</u></a>
